<section id="task-modal" class="modal hidden">
    <div class="modal-content">
        <h2>Создать задание</h2>
        <form>
            <label for="task-title">Название:</label>
            <input type="text" id="task-title" name="task-title" required>

            <label for="task-date">Дата:</label>
            <input type="date" id="task-date" name="task-date">

            <label for="task-time">Время:</label>
            <input type="time" id="task-time" name="task-time">

            <button type="submit">Создать</button>
            <button type="button" id="close-modal">Отмена</button>
        </form>
    </div>
</section>